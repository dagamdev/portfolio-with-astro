---
interface Props {
  id?: string
  class?: string
  data?: {
    icon: (_props: Record<string, any>) => any
    title: string
  }
}

const { id, class: className, data } = Astro.props
---

<section id={id} class={`w-full mx-auto lg:w-[740px] mb-40 ${className}`}>
  {data && (
    <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-blue-200">
      <data.icon class="size-7" />
      {data.title}
    </h2>
  )}
  <slot />
</section>